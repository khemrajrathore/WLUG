<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFf"
    tools:context="com.example.shree.wlug.ContactUs">
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardCornerRadius="10dp"
        >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Walchand College Of Engineering,Sangli"
                android:textSize="20dp"
                android:onClick="launchMap"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="#311b92"
                android:drawableLeft="@drawable/location"
                android:layout_gravity="center_horizontal"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="+91-9021526132"
            android:textSize="20dp"
            android:drawableLeft="@drawable/phone"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="#311b92"
            android:id="@+id/mobileno"
            android:onClick="mobileClick"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="wce.wlugclub@gmail.com"
            android:textSize="20dp"
            android:drawableLeft="@drawable/email"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="#311b92"
            android:onClick="getMail"
            android:id="@+id/email"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="www.wcewlug.org"
            android:textSize="20dp"
            android:drawableLeft="@drawable/web"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="#311b92"
            android:onClick="openBrowser"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>
