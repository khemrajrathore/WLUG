<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shree.wlug.Metamorphosis">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Metamorphosis"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="25dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/meta2k17"/>

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/registerEvent"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:background="#13ABac"
        android:shadowColor="#212121"
        android:onClick="participateEvent"
        android:text="Register with us"
        android:layout_height="50dp"
        tools:ignore="OnClick" />
</LinearLayout>
