<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainboard"
        android:onClick="viewMainBoard"
        android:text="MainBord"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mentorboard"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="viewMentorBoard"
        android:text="Mentor Bord"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memberboard"
        android:onClick="viewMemberBoard"
        android:text="Member"
        android:gravity="center"/>
</LinearLayout>